# EmailOS Test Environment Configuration
# Copy this file to .env and fill in your actual values for comprehensive testing

# Email Configuration for Testing
# These should be real email addresses you control for integration testing
FROM_EMAIL=your-configured-account@example.com
TO_EMAIL=test-recipient@example.com

# Optional: Additional test email addresses
CC_EMAIL=cc-test@example.com
BCC_EMAIL=bcc-test@example.com

# Test Mode Configuration
MAILOS_TEST_MODE=true
MAILOS_MOCK_MODE=false

# Email Provider Settings (if needed for testing)
# IMAP_HOST=imap.gmail.com
# IMAP_PORT=993
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587

# Test Data Configuration
TEST_ATTACHMENT_DIR=test_attachments
TEST_DRAFTS_DIR=draft-emails
TEST_OUTPUT_DIR=test/temp

# Advanced Test Settings
TEST_TIMEOUT=30s
TEST_PARALLEL=false
TEST_VERBOSE=false
TEST_COVERAGE=false

# License and Authentication (if needed)
# EMAILOS_LICENSE_KEY=your-license-key
# API_KEY=your-api-key

# AI Provider Settings for Testing
# OPENAI_API_KEY=your-openai-key
# ANTHROPIC_API_KEY=your-anthropic-key

# Debug and Development
DEBUG=false
LOG_LEVEL=info
DEV_MODE=true

# Test Categories to Run (comma-separated)
# Options: all, unit, integration, help, errors, send, read, search, groups, drafts
TEST_CATEGORIES=help,errors,unit

# File Watching (for watch mode)
WATCH_EXTENSIONS=.go,.sh,.md
WATCH_DIRECTORIES=.,test,scripts

# Coverage Settings
COVERAGE_THRESHOLD=80
COVERAGE_OUTPUT=html

# Mock Server Settings
MOCK_IMAP_PORT=1143
MOCK_SMTP_PORT=1025
MOCK_SERVER_ENABLED=false